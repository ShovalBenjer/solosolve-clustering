# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_INPUT_TOPIC=cfpb-complaints-input
KAFKA_OUTPUT_TOPIC=cfpb-complaints-output
KAFKA_GROUP_ID=cfpb-complaint-processor

# Spark
SPARK_MASTER=local[*]
SPARK_CHECKPOINT_DIR=./checkpoint

# BERT
BERT_MODEL_NAME=small_bert_L2_128
BERT_BATCH_SIZE=8
BERT_MAX_SEQ_LENGTH=512

# HDBSCAN
HDBSCAN_MIN_CLUSTER_SIZE=5
HDBSCAN_METRIC=euclidean
LSH_BUCKET_LENGTH=0.1
LSH_NUM_HASH_TABLES=3

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cfpb_complaints
DB_USER=cfpb_app
DB_PASSWORD=password

# Data
SAMPLE_DATA_PATH=./data/complaints.csv 